    <Label text="Nombre del protagonista:"/>
    <TextField fx:id="txtNombre" promptText="Ejemplo: Arturo"/>

    <Label text="Salud:"/>
    <TextField fx:id="txtSalud" promptText="100"/>

    <Label text="Ataque:"/>
    <TextField fx:id="txtAtaque" promptText="15"/>

    <Label text="Defensa:"/>
    <TextField fx:id="txtDefensa" promptText="10"/>

